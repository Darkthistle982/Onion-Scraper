<div class="jumbotron text-center">
    <div class="overlay"></div>
    <div class="background-image"></div>
    <div class="caption">
        <h1 class="display-1 text-white">Onion Scraper</h1>
        <p class="h2 text-white">All the "news" you'll ever need.....</p>
    </div>
</div>

<div class="container-fluid article-container">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                {{#if article}}
                {{#each article}}
                <div class="card-title">
                    <h3>
                        <a href="{{this.link}}" target="_blank">{{this.title}}</a>
                        <a class="btn btn-success comment" id="{{this._id}}">Comment</a>
                    </h3>
                </div>
                <div class="card-text">
                    <p>{{this.summary}}</p>
                </div>
            </div>
            {{/each}}
            {{/article}}
        </div>
    </div>
</div>

