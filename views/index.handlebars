<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="/">Onion Scraper</a>
    <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01"
        aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarColor01">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <button class="btn btn-light mr-1 font-weight-bold" id="scrape">Scrape New Articles</button>
            </li>
            <li class="nav-item">
                <a class="btn btn-danger ml-1 font-weight-bold" id="clear">Clear Articles</a>
            </li>
        </ul>
    </div>
</nav>

<div class="jumbotron text-center">
    <div class="overlay"></div>
    <div class="background-image"></div>
    <div class="caption">
        <h1 class="display-1 text-white">Onion Scraper</h1>
        <p class="h2 text-white">All the "news" you'll ever need.....</p>
    </div>
</div>

<div class="container-fluid article-container">
    <div class="col-lg-12">
        {{#each article}}
        <div class="card m-4 bg-secondary">
            <div class="card-body">
                <div class="card-title">
                    <h3>
                        <a href={{link}} target="_blank" class="text-white">{{title}}</a>
                        <button class="btn btn-success comment float-right mt-1" id={{_id}} type="button"
                            data-toggle="modal" data-target="#commentModal">Comment</button>
                    </h3>
                </div>
                <div class="card-text">
                    <p class="text-white">{{summary}}</p>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>

<a id="back2Top" title="Back to top" href="#">&#10148;</a>

{{#each articles}}
    {{> modal }}
{{/each}}