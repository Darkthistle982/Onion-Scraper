<div class="container-fluid article-container">
    <div class="col-lg-12">
        {{#each article}}
        <div class="card m-4 bg-secondary">
            <div class="card-body">
                <div class="card-title">
                    <h3>
                        <a href={{link}} target="_blank" class="text-white">{{title}}</a>
                        <br>
                        <button class="btn btn-success float-right mt-1 ml-1" id={{_id}} type="button"
                            data-toggle="modal" data-target="#commentModal">Comment</button>
                        <button class="btn btn-dark save float-right mt-1 ml-1 mr-1" data-id="{{_id}}">Save
                            Article</button>
                        <button class="btn btn-danger delete float-right mt-1 ml-1" data-id="{{_id}}">Delete
                            Article</button>
                    </h3>
                </div>
                <br>
                <div class="card-text">
                    <p class="text-white">{{summary}}</p>
                </div>
                {{#if comments}}
                {{#each comments}}
                <div class="card-footer">
                    <h5 class="text-white">{{body}}</h5>
                    <button class="btn btn-dark deleteNote float-right" data-note-id="{{_id}}">Delete Note</button>
                    <br>
                </div>
                {{/each}}
                {{else}}
                <div class="card-footer">
                    <h5 class="text-white">No notes for this article yet.</h5>
                </div>
                {{/if}}
            </div>
        </div>
        <div class="modal" id="commentModal" tabindex="-1" role="dialog" aria-labelledby="commentModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="commentModalLabel">Enter Comment</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="form-group">
                                <label for="commentsForm">Comment</label>
                                <textarea class="form-control" id="commentsForm{{_id}}" rows="3"></textarea>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-dark" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-secondary" id="saveComment" data-dismiss="modal"
                            data-id={{_id}}>Save
                            Comment</button>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>

